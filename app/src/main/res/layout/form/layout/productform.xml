<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F3F6"
    >
    <include layout="@layout/customtoobar_d" android:id="@+id/supplierform_toobar"/>
    <ScrollView
        android:id="@+id/tab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             >
    <LinearLayout style="@style/wrap_layout" >
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <!-- 无圆角-->
        <LinearLayout style="@style/mid_layout">
            <TextView style="@style/usertext"
                android:text="商品名称：" />
            <EditText
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:hint="商品名称"
                android:textSize="14dp"
                android:id="@+id/product_name"
                android:maxLines="1"
                android:imeOptions="actionDone"
                android:inputType="text"/>
        </LinearLayout>
        <View style="@style/bg_line"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout">
            <TextView style="@style/usertext"
                android:text="商品号码："
                />

            <EditText
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:hint="商品编码唯一，保存后不能修改"
                android:id="@+id/product_number"
                android:maxLines="1"
                android:imeOptions="actionDone"
                android:inputType="text"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout style="@style/wrap_layout_to" >
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout">
            <TextView style="@style/usertext"
                android:text="采购价格" />
            <EditText
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:id="@+id/product_purchaseprice"
                android:textSize="14dp"
                android:hint="¥0.00"
                android:maxLines="1"
                android:inputType="phone"/>
        </LinearLayout>

        <!-- 分割线 -->
        <View style="@style/bg_line"  android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout">
            <TextView style="@style/usertext"
                android:text="销售价格" />
            <EditText
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:id="@+id/product_salesprice"
                android:textSize="14dp"
                android:hint="¥0.00"
                android:maxLines="1"
                android:inputType="phone"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout style="@style/wrap_layout_to" >
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout">
            <TextView style="@style/usertext"
                android:text="条形码" />
            <EditText
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:id="@+id/product_barcode"
                android:textSize="14dp"
                android:hint="输入或者扫描录入条形码"
                android:maxLines="1"
                android:inputType="text"/>
        </LinearLayout>

        <!-- 分割线 -->
        <View style="@style/bg_line"  android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout">
            <TextView style="@style/usertext"
                android:text="型号类型" />
            <EditText
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:id="@+id/product_model"
                android:textSize="14dp"
                android:hint="输入型号类型"
                android:maxLines="1"
                android:inputType="text"/>
        </LinearLayout>
        <!-- 分割线 -->
        <View style="@style/bg_line"  android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout">
            <TextView style="@style/usertext"
                android:text="备注" />
            <EditText
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:id="@+id/product_note"
                android:textSize="14dp"
                android:hint="商品备注信息"
                android:maxLines="1"
                android:inputType="text"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout style="@style/wrap_layout_to" >
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout"
            android:id="@+id/product_category_layout">
            <TextView style="@style/usertext"
                android:text="分类"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/from_arrow"/>
            <TextView style="@style/usertext"
                android:id="@+id/product_category"
                android:hint="请选择分类"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <!-- 分割线 -->
        <View style="@style/bg_line"  android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <!-- 下圆角-->
        <LinearLayout style="@style/top_layout"
            android:id="@+id/product_brand_layout">
            <TextView style="@style/usertext"
                android:text="品牌"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/from_arrow"/>
            <TextView style="@style/usertext"
                android:id="@+id/product_brand"
                android:hint="请选择品牌"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <!-- 分割线 -->
        <View style="@style/bg_line"  android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <!-- 下圆角-->
        <LinearLayout style="@style/top_layout"
            android:id="@+id/product_unit_layout">
            <TextView style="@style/usertext"
                android:text="单位"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/from_arrow"/>
            <TextView style="@style/usertext"
                android:id="@+id/product_unit"
                android:hint="请选择单位"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/loginbutton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/buttonshape"
                android:text="删除客户"
                android:textColor="#ffffff"
                android:visibility="invisible"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
 </LinearLayout>
    </ScrollView>
</LinearLayout>

