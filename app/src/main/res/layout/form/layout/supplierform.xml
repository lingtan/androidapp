<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F3F6"
    >
    <include layout="@layout/customtoobar_d" android:id="@+id/supplierform_toobar"/>
    <LinearLayout style="@style/wrap_layout" >
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <!-- 无圆角-->
        <LinearLayout style="@style/mid_layout">
            <TextView style="@style/usertext"
                android:text="供应商：" />
            <EditText
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:hint="请输入供应商"
                android:textSize="14dp"
                android:id="@+id/supplierform_name"
                android:maxLines="1"
                android:imeOptions="actionDone"
                android:inputType="text"/>
        </LinearLayout>
        <View style="@style/bg_line"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout">
            <TextView style="@style/usertext"
                android:text="联系地址："
                />

            <EditText
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:hint="请输联系地址"
                android:id="@+id/supplierform_address"
                android:maxLines="1"
                android:imeOptions="actionDone"
                android:inputType="text"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout style="@style/wrap_layout_to"
        >
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout"
            android:id="@+id/supplierform_category_layout">
            <TextView style="@style/usertext"
                android:text="供应商分类"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/from_arrow"/>
            <TextView style="@style/usertext"
                android:id="@+id/supplierform_category"
                android:hint="请选择供应商分类"
                android:layout_gravity="center_vertical"
               />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout style="@style/wrap_layout_to" >
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout">
            <TextView style="@style/usertext"
                android:text="电话号码" />
            <EditText
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:id="@+id/supplierform_phone"
                android:textSize="14dp"
                android:hint="请输入电话号码"
                android:maxLines="1"
                android:inputType="phone"/>
        </LinearLayout>

        <!-- 分割线 -->
        <View style="@style/bg_line"  android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout">
            <TextView style="@style/usertext"
                android:text="传真号码" />
            <EditText
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:id="@+id/supplierform_fax"
                android:textSize="14dp"
                android:hint="请输入传真号码"
                android:maxLines="1"
                android:inputType="phone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/loginbutton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/buttonshape"
                android:text="删除客户"
                android:textColor="#ffffff"
                android:visibility="invisible"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

