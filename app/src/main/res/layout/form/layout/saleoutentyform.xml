<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F3F6"
    >
    <include layout="@layout/customtoobar_d" android:id="@+id/supplierform_toobar"/>
    <ScrollView
        android:id="@+id/tab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             >
    <LinearLayout style="@style/wrap_layout" >
        <!-- 无圆角-->
        <LinearLayout style="@style/mid_layout"
            android:id="@+id/product_custom_layout">
            <TextView style="@style/usertext"
                android:hint="客户" />

            <TextView style="@style/usertext"
                android:id="@+id/product_custom"
                android:hint="请选择客户"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>
        <View style="@style/bg_line"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout"
            android:id="@+id/product_stock_layout">
            <TextView style="@style/usertext"
                android:hint="仓库"
                />


            <TextView style="@style/usertext"
                android:id="@+id/product_stock"
                android:hint="请选择仓库"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout style="@style/wrap_layout_to"
        android:layout_marginTop="20dp">
        <!-- 上圆角-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <LinearLayout style="@style/top_layout"

                android:layout_weight="0.64">
                <TextView style="@style/usertext"
                    android:hint="产品明细"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#C2C2C2"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:id="@+id/saleproduct_add"
                android:layout_weight="0.32">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#343434"
                    android:textSize="11dp"
                    android:text="合计："
                    />
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/saleoutenty_fqty"
                    android:textSize="11dp"
                    />
                <TextView  android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/saleoutenty_amount"
                    android:textColor="#E57E58"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:textSize="11dp"
                   />
            </LinearLayout>
        </LinearLayout>
        <!-- 分割线 -->
        <View style="@style/bg_line"  android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <!-- 下圆角-->
        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <com.example.androiderp.listview.SlideAndDragListView
                android:id="@+id/saleproduct_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#c9cabb"
                android:dividerHeight="1px">
            </com.example.androiderp.listview.SlideAndDragListView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout style="@style/hide_layout_to"
        android:id="@+id/productform_layout_hide_one"
        android:layout_marginTop="20dp">
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout"
            android:id="@+id/product_category_layout">
            <TextView style="@style/usertext"
                android:hint="销售员"
                android:layout_gravity="center_vertical"
                />

            <TextView style="@style/usertext"
                android:id="@+id/product_category"
                android:hint="请选择销售员"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <View style="@style/bg_line"  android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout style="@style/top_layout"
            android:id="@+id/product_data_layout"
            android:gravity="left">
            <TextView style="@style/usertext"
                android:hint="销售日期"
                android:layout_gravity="center_vertical"/>
            <TextView style="@style/usertext"
                android:id="@+id/product_data"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- 分割线 -->
        <View style="@style/bg_line"  android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout"
            android:id="@+id/product_consignment_layout">
            <TextView style="@style/usertext"
                android:hint="发货方式"
                android:layout_gravity="center_vertical"
                />

            <TextView style="@style/usertext"
                android:id="@+id/product_consignment"
                android:hint="请选择发货方式"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
       </LinearLayout>
            <LinearLayout style="@style/hide_layout_to"
                android:layout_marginTop="10dp">
        <LinearLayout style="@style/bottom_layout">
            <TextView style="@style/usertext"
                android:hint="备注"
                android:layout_gravity="center_vertical"
                />

            <TextView style="@style/usertext"
                android:id="@+id/product_note"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>


 </LinearLayout>
    </ScrollView>
</LinearLayout>

