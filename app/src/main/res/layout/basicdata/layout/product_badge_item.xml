<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/badge_item_layout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
>

    <LinearLayout
        android:id="@+id/custom_item_layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >
   <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:id="@+id/product_badge_item_show"
     android:textColor="#ffffff"
     android:background="#FF0000"
      android:textStyle="bold"
     android:textSize="14dip" />
    <TextView
        android:id="@+id/custom_item_layout_one_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:textColor="#343434"
        android:textSize="15dip" />

        </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="货号："
            android:textColor="#919191"
            android:layout_marginLeft="25dp"
            android:textSize="11dip" />
    <TextView
            android:id="@+id/custom_item_layout_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#919191"
            android:textSize="11dip" />
</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="型号："
                android:textColor="#919191"
                android:layout_marginLeft="25dp"
                android:textSize="11dip" />
            <TextView
                android:id="@+id/custom_item_layout_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="#919191"
                android:textSize="11dip" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销售价格："
                android:textColor="#919191"
                android:layout_marginLeft="25dp"
                android:textSize="11dip" />
            <TextView
                android:id="@+id/custom_item_layout_salesprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/holo_red_light"
                android:textSize="13dip" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/custom_item_layout_one_image"
            android:layout_width="34dp"
            android:layout_height="28dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/listvist_item_delete"
            android:visibility="gone"
            />
    </LinearLayout>
</RelativeLayout>




