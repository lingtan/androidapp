<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/custom_item_layout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="13dip">

    <LinearLayout
        android:id="@+id/custom_item_layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="2dip"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >

    <TextView
        android:id="@+id/saleout_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textColor="#343434"
        android:textSize="14dip" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >
        <TextView
            android:id="@+id/saleout_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#919191"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:textSize="12dip" />
    <TextView
            android:id="@+id/saleout_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E57E58"
            android:layout_marginLeft="50dp"
            android:layout_gravity="right"
            android:textSize="14dip" />
</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >
            <TextView
                android:id="@+id/saleout_fdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#919191"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:textSize="12dip" />
            <TextView
                android:id="@+id/saleout_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:gravity="right"
                android:textColor="#919191"
                android:textSize="12dip" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/saleout_arrow"
            android:layout_width="34dp"
            android:layout_height="28dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/toobar_add"
            />
    </LinearLayout>
</RelativeLayout>




