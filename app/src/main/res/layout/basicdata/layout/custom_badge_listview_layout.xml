<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".basicdata.CustomListView"
   >

    <include layout="@layout/custom_toobar" android:id="@+id/id_toobar"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="47dp"
    android:background="#E0E0E0"
    android:layout_marginTop="50dp"
    android:padding="5dp">
    <com.example.androiderp.custom.CustomSearch
        android:id="@+id/search"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        style="@style/editTextStyle"
       />
</LinearLayout>
    <View style="@style/bg_line" android:layout_marginTop="97dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:layout_marginBottom="30dp">
    <ListView
        android:layout_marginTop="97dp"
        android:id="@+id/left_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#c9cabb"
        android:background="#E0E0E0"
        android:dividerHeight="1px"
      >
    </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:layout_marginBottom="30dp">
        <ListView
            android:layout_marginTop="97dp"
            android:id="@+id/right_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#c9cabb"
            android:background="#ffffff"
            android:dividerHeight="1px" >
        </ListView>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:id="@+id/product_shopping_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shopping"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/product_item_layout_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/holo_red_light"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:textSize="18dip" />
    </LinearLayout>
</RelativeLayout>

