<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".basicdata.CustomListView"
   >

    <include layout="@layout/custom_toobar" android:id="@+id/id_toobar"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="47dp"
    android:background="#E0E0E0"
    android:layout_marginTop="50dp"
    android:padding="5dp">
    <com.example.androiderp.custom.CustomSearch
        android:id="@+id/search"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        style="@style/editTextStyle"
       />
</LinearLayout>
    <View style="@style/bg_line" android:layout_marginTop="97dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.78">
    <ListView
        android:layout_marginTop="100dp"
        android:id="@+id/left_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#c9cabb"
        android:dividerHeight="1px"
        android:background="#f5f6eb">
    </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.22">
        <ListView
            android:layout_marginTop="100dp"
            android:id="@+id/right_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#c9cabb"
            android:dividerHeight="1px" >
        </ListView>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>

