<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".basicdata.CustomListView"
   >

    <include layout="@layout/custom_toobar" android:id="@+id/id_toobar"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="37dp"
    android:background="#E0E0E0"
    android:layout_marginTop="50dp"
    android:padding="5dp">
    <com.example.androiderp.custom.CustomSearch
        android:id="@+id/search"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        style="@style/editTextStyle"
       />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View android:layout_height="1px" android:layout_width="match_parent"
            android:background="#c9cabb"
            android:layout_marginTop="87dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/tip"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/item_tile"
            android:gravity="center_vertical"
            android:hint="[左右滑动]  选项可进行删除/编辑"
            android:textSize="12dip" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <View android:layout_height="1px" android:layout_width="match_parent"
        android:background="#c9cabb"
        android:layout_marginTop="120dp"/>
    </LinearLayout>
    <com.example.androiderp.listview.SlideAndDragListView
        android:id="@+id/custom_listview_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#c9cabb"
        android:dividerHeight="1px"
        android:layout_marginTop="121dp">
    </com.example.androiderp.listview.SlideAndDragListView>

</RelativeLayout>

