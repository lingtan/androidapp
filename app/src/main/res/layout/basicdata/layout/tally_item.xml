<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/custom_item_layout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="8dip">

    <LinearLayout
        android:id="@+id/custom_item_layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="2dip"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >

    <TextView
        android:id="@+id/tally_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textColor="#343434"
        android:textSize="14dip" />
            <TextView
                android:id="@+id/tally_fdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#919191"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:textSize="14dip" />

        </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
       >

        <TextView
            android:id="@+id/tally_accounts"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="#E59842"
            android:textSize="12dip" />
    <TextView
            android:id="@+id/tally_amount"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textColor="#E59842"
            android:textSize="14dip" />
</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
           >

            <TextView
                android:id="@+id/tally_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#343434"
                android:textSize="12dip" />


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/saleout_arrow"
            android:layout_width="34dp"
            android:layout_height="28dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/toobar_add"
            />
    </LinearLayout>
</RelativeLayout>




