<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customgridview_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0.0dip"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/customgridview_item_layout_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_gv"
        android:padding="22.0dip" >

        <ImageView
            android:id="@+id/customgridview_item_layout_one_image"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/customgridview_item_layout_one_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customgridview_item_layout_one_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5.0dip"
            android:maxLines="1"
            android:textColor="@color/commo_text_color"
            android:textSize="12.0dp" />
    </RelativeLayout>

</RelativeLayout>