<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/thressfragmnet_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F3F6"
     >

    
    <LinearLayout style="@style/wrap_layout"
        android:orientation="horizontal"
        android:weightSum="1">
        <RelativeLayout
            android:id="@+id/thressfragmnet_khgllayout"
            style="@style/secondfragment_layout"
            android:layout_weight="0.5">
            <ImageView
                android:id="@+id/thressfragmnet_khglimag"
                android:layout_height="30.dp"
                android:layout_width="30.dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/home_firstfragment_kh"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/thressfragmnet_khglname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="客户管理"
                android:layout_alignTop="@id/thressfragmnet_khglimag"
                android:layout_toRightOf="@+id/thressfragmnet_khglimag"
                />
            <TextView
                android:id="@+id/thressfragmnet_khgltis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="客户管理"
                android:layout_below="@+id/thressfragmnet_khglimag"
                android:layout_toRightOf="@+id/thressfragmnet_khglimag"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#C2C2C2"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <RelativeLayout style="@style/secondfragment_layout"
            android:id="@+id/thressfragmnet_xscklayout"
            android:layout_weight="0.5">
            <ImageView
                android:id="@+id/thressfragmnet_xsckmag"
                android:layout_height="30.dp"
                android:layout_width="30.dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/firstfragment_xs"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/thressfragmnet_xsckname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="销售出库"
                android:layout_alignTop="@id/thressfragmnet_xsckmag"
                android:layout_toRightOf="@+id/thressfragmnet_xsckmag"
                />
            <TextView
                android:id="@+id/thressfragmnet_xscktis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="销售新增"
                android:layout_below="@+id/thressfragmnet_xsckmag"
                android:layout_toRightOf="@+id/thressfragmnet_xsckmag"/>


        </RelativeLayout>

        </LinearLayout>

    <!-- 全圆角-->
    <LinearLayout style="@style/wrap_layout"
        android:orientation="horizontal"
        android:weightSum="1">



        <RelativeLayout
            style="@style/secondfragment_layout"
            android:id="@+id/thressfragmnet_layout_kccxlayout"
            android:layout_weight="0.5">
            <ImageView
                android:id="@+id/thressfragmnet_kccximage"
                android:layout_height="30.dp"
                android:layout_width="30.dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/hoem_fistfragment_search"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/thressfragmnet_kccxname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="库存查询"
                android:layout_alignTop="@id/thressfragmnet_kccximage"
                android:layout_toRightOf="@+id/thressfragmnet_kccximage"
                />
            <TextView
                android:id="@+id/thressfragmnet_kccxtis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="库存查询"
                android:layout_below="@+id/thressfragmnet_kccximage"
                android:layout_toRightOf="@+id/thressfragmnet_kccximage"
                />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#C2C2C2"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <RelativeLayout style="@style/secondfragment_layout"
            android:id="@+id/thressfragmnet_kcpdlayout"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/thressfragmnet_kcpdimag"
                android:layout_height="30.dp"
                android:layout_width="30.dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/home_fisrfragment_pd"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/thressfragmnet_ckpdtis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="库存盘点"
                android:layout_alignTop="@id/thressfragmnet_kcpdimag"
                android:layout_toRightOf="@+id/thressfragmnet_kcpdimag"
                android:layout_marginBottom="22dp"
                />


        </RelativeLayout>
    </LinearLayout>
    <LinearLayout style="@style/bottom_layout"
        android:id="@+id/thressfragmnet_xslslayout">
        <ImageView
            android:id="@+id/thressfragmnet_xslsimag"
            android:layout_height="30.dp"
            android:layout_width="30.dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/home_fisrtfragment_xscx"
            android:layout_marginRight="20dp"
            />
        <TextView style="@style/usertext"
            android:id="@+id/thressfragmnet_xslsname"
            android:textSize="14dp"
            android:text="销售流水" />
        <ImageView style="@style/img_arrow"/>
    </LinearLayout>


    <!-- 全圆角-->
    <LinearLayout style="@style/wrap_layout_to"
        android:orientation="horizontal"
        android:weightSum="1">
        <RelativeLayout
            android:id="@+id/thressfragmnet_kcdblayout"
            style="@style/secondfragment_layout"
            android:layout_weight="0.5">
            <ImageView
                android:id="@+id/thressfragmnet_kcdbimag"
                android:layout_height="30.dp"
                android:layout_width="30.dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/hoem_fistfragment_search"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/thressfragmnet_ckdbname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="库存调拨"
                android:layout_alignTop="@id/thressfragmnet_kcdbimag"
                android:layout_toRightOf="@+id/thressfragmnet_kcdbimag"
                />
            <TextView
                android:id="@+id/secondfragmnet_kcdbtis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="产品移库"
                android:layout_below="@+id/thressfragmnet_kcdbimag"
                android:layout_toRightOf="@+id/thressfragmnet_kcdbimag"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#C2C2C2"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <RelativeLayout style="@style/secondfragment_layout"
            android:layout_weight="0.5"
            android:id="@+id/thressfragmnet_xsthlayout">

            <ImageView
                android:id="@+id/thressfragmnet_xsthimag"
                android:layout_height="30.dp"
                android:layout_width="30.dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/home_fisrfragment_pd"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/thressfragmnet_xkthname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="销售退货"
                android:layout_alignTop="@id/thressfragmnet_xsthimag"
                android:layout_toRightOf="@+id/thressfragmnet_xsthimag"
                android:layout_marginBottom="22dp"
                />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
