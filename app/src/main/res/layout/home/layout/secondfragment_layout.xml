<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/secondfragmnet_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F3F6"
     >

    
    <LinearLayout style="@style/wrap_layout"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout
            style="@style/secondfragment_layout"
            android:id="@+id/secondfragment_layout_gyslayout"
            android:layout_weight="0.5">
            <ImageView
                android:id="@+id/secondfragmnet_gysimage"
                android:layout_height="30.dp"
                android:layout_width="30.dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/home_fisrtfragment_gy"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/secondfragmnet_gysiname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="供应商"
                android:layout_alignTop="@id/secondfragmnet_gysimage"
                android:layout_toRightOf="@+id/secondfragmnet_gysimage"
                />
            <TextView
                android:id="@+id/secondfragmnet_gystis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="进货查询"
                android:layout_below="@+id/secondfragmnet_gysimage"
                android:layout_toRightOf="@+id/secondfragmnet_gysimage"
                />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#66CCFF"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <RelativeLayout style="@style/secondfragment_layout"

            android:id="@+id/secondfragmnet_cgthlayout"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/secondfragmnet_cgthimag"
                android:layout_height="30.dp"
                android:layout_width="30.dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/hoem_firstfragmnet_cg"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/onne_fuzut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="采购退货"
                android:layout_alignTop="@id/secondfragmnet_cgthimag"
                android:layout_toRightOf="@+id/secondfragmnet_cgthimag"
                android:layout_marginBottom="22dp"
                />


        </RelativeLayout>
        </LinearLayout>
       <LinearLayout style="@style/bottom_layout">
           <ImageView
               android:id="@+id/secondfragmnet_cglsimag"
               android:layout_height="30.dp"
               android:layout_width="30.dp"
               android:layout_alignParentTop="true"
               android:src="@drawable/home_fisrtfragment_cgcx"
               android:layout_marginRight="20dp"
               />
            <TextView style="@style/usertext"
                android:textSize="14dp"
                android:text="采购流水" />
          	<ImageView style="@style/img_arrow"/>
        </LinearLayout>

    
     <!-- 全圆角-->
    <LinearLayout style="@style/wrap_layout_to"
        android:orientation="horizontal"
        android:weightSum="1">
        <RelativeLayout
            android:id="@+id/caigou"
            style="@style/secondfragment_layout"
            android:layout_weight="0.5">
            <ImageView
                android:id="@+id/secondfragmnet_ckcximag"
                android:layout_height="30.dp"
                android:layout_width="30.dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/hoem_fistfragment_search"
                android:layout_marginRight="20dp"
               />

            <TextView
                android:id="@+id/secondfragmnet_ckcxname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="库存查询"
                android:layout_alignTop="@id/secondfragmnet_ckcximag"
                android:layout_toRightOf="@+id/secondfragmnet_ckcximag"
               />
            <TextView
                android:id="@+id/secondfragmnet_ckcxtis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="进货、入库"
                android:layout_below="@+id/secondfragmnet_ckcximag"
                android:layout_toRightOf="@+id/secondfragmnet_ckcximag"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#66CCFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <RelativeLayout style="@style/secondfragment_layout"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/tupiant"
                android:layout_height="30.dp"
                android:layout_width="30.dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/home_fisrfragment_pd"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/fuzut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="库存盘点"
                android:layout_alignTop="@id/tupiant"
                android:layout_toRightOf="@+id/tupiant"
                android:layout_marginBottom="22dp"
                />


        </RelativeLayout>
        </LinearLayout>

    <!-- 全圆角-->
    <LinearLayout style="@style/wrap_layout"
        android:orientation="horizontal"
        android:weightSum="1">
        <RelativeLayout
            android:id="@+id/thress_caigou"
            style="@style/secondfragment_layout"
            android:layout_weight="0.5">
            <ImageView
                android:id="@+id/thress_tupian"
                android:layout_height="30.dp"
                android:layout_width="30.dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/home_fistfragment_db"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/thress_fuzu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="库存调拨"
                android:layout_alignTop="@id/thress_tupian"
                android:layout_toRightOf="@+id/thress_tupian"
                />
            <TextView
                android:id="@+id/thress_tis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="进货、入库"
                android:layout_below="@+id/thress_tupian"
                android:layout_toRightOf="@+id/thress_tupian"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#66CCFF"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <RelativeLayout style="@style/secondfragment_layout"
            android:layout_weight="0.5">
            <ImageView
                android:id="@+id/thress_pian"
                android:layout_height="30.dp"
                android:layout_width="30.dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/hoem_firstfragmnet_cg"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/thress_zu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="采购退货"
                android:layout_alignTop="@id/thress_pian"
                android:layout_toRightOf="@+id/thress_pian"
                />
            <TextView
                android:id="@+id/thress_tistow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="退货操作"
                android:layout_below="@+id/thress_pian"
                android:layout_toRightOf="@+id/thress_pian"/>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
